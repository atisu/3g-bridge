%{_libdir}/3g-bridge/Java_handler.la
%{_libdir}/3g-bridge/Java_handler.so
%{_datadir}/java/3g-bridge-plugin-%{ver}.jar
%endif

%if %{_with_jobwrapper}
%files jobwrapper
%defattr(-, root, root)
